# ============================================
# Fashion E-Commerce Store - Environment Config
# ============================================

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration (SQLite)
DB_PATH=/app/data/database.sqlite

# Application Settings
APP_NAME="Fashion Store"
APP_URL=https://yourdomain.com
ADMIN_BASE_PATH=/admin

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this-in-production

# CORS & Security Headers
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Fashion Store

# Payment Gateways (Optional)
STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx
PAYPAL_CLIENT_ID=xxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxx

# AWS S3 Configuration (for file uploads - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Third-party Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=
HOTJAR_ID=

# CRM & Communication Services
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

WHATSAPP_API_URL=
WHATSAPP_PHONE_ID=
WHATSAPP_API_TOKEN=

TELEGRAM_BOT_TOKEN=

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Monitoring & Analytics (Optional)
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_API_DOCS=false
